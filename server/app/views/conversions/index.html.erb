<h1>Listing conversions</h1>

<table>
  <thead>
    <tr>
      <th>User agent</th>
      <th>Host</th>
      <th>Browser</th>
      <th>Os</th>
      <th>Ip address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @conversions.each do |conversion| %>
      <tr>
        <td><%= conversion.user_agent %></td>
        <td><%= conversion.host %></td>
        <td><%= conversion.browser %></td>
        <td><%= conversion.os %></td>
        <td><%= conversion.ip_address %></td>
        <td><%= link_to 'Show', conversion %></td>
        <td><%= link_to 'Edit', edit_conversion_path(conversion) %></td>
        <td><%= link_to 'Destroy', conversion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Conversion', new_conversion_path %>
