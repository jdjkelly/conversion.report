source 'https://rubygems.org'

ruby '2.1.2'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.1.7'

# Use SCSS for stylesheets
gem 'sass-rails', '~> 4.0.3'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster. Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# bundle exec rake doc:rails generates the API under doc/api.
gem 'sdoc', '~> 0.4.0',          group: :doc

# Spring speeds up development by keeping your application running in the background. Read more: https://github.com/rails/spring
gem 'spring',         group: :development

# Pry is the best REPL ever.
gem 'pry',            group: [:development, :test]

# This is for user authentication/models
gem 'clearance',      '~> 1.8.0'

# Using ActiveRecord can be confusing - annotate provides SQL table/column data to models etc
gem 'annotate'

# Heroku!
gem 'rails_12factor', group: :production

# Postgres support
gem 'pg'

# For adding CORS support to Routes
gem 'rack-cors',      require: 'rack/cors'

# Foreman helps us manage upstarting processes
gem 'foreman'

# Parsing useragent strings into browser/os made easy
gem 'useragent'

# Paired together, groupdate and chartkick make graphing created_at by day easy
gem 'groupdate'
gem 'chartkick'

# Use puma as the app server
gem 'puma'

# Used to look up ips and match to country
gem 'geocoder'

# Adds Twitter Bootstrap in to the asset pipeline
gem 'therubyracer'
gem 'less-rails' #Sprockets (what Rails 3.1 uses for its asset pipeline) supports LESS
gem 'twitter-bootstrap-rails'
